import React, { useState } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { Button } from "@/components/ui/button";
import { RefreshCw, Loader2, Search } from "lucide-react";
import { Input } from "@/components/ui/input";
import { toast } from "sonner";
import { useNavigate } from "react-router-dom";
import { createPageUrl } from "@/utils";
import { format } from "date-fns";
import TopicCard from "../components/news/TopicCard";

export default function News() {
  const queryClient = useQueryClient();
  const navigate = useNavigate();
  const [searchTerm, setSearchTerm] = useState("");
  const [isFetching, setIsFetching] = useState(false);

  const { data: topics = [], isLoading } = useQuery({
    queryKey: ['news-topics'],
    queryFn: () => base44.entities.NewsTopic.list('-created_date'),
    initialData: [],
  });

  const fetchNewsMutation = useMutation({
    mutationFn: async () => {
      setIsFetching(true);
      
      const sources = [
        { name: "CBC", url: "https://www.cbc.ca/news", bias: "Left" },
        { name: "CTV News", url: "https://www.ctvnews.ca/", bias: "Centre" },
        { name: "Global News", url: "https://globalnews.ca/", bias: "Centre" },
        { name: "The Globe and Mail", url: "https://www.theglobeandmail.com/", bias: "Right" },
        { name: "National Post", url: "https://nationalpost.com/", bias: "Right" },
        { name: "Toronto Star", url: "https://www.thestar.com/", bias: "Left" },
        { name: "CP24", url: "https://www.cp24.com/", bias: "Centre" },
        { name: "Toronto Sun", url: "https://torontosun.com/", bias: "Right" },
        { name: "Financial Post", url: "https://financialpost.com/", bias: "Right" }
      ];

      const topicsMap = {};

      for (const source of sources) {
        const result = await base44.integrations.Core.InvokeLLM({
          prompt: `Go to ${source.url} and find the top 5 current Canadian political or federal news stories.

For each story, provide:
1. The main topic/event (e.g., "Federal Budget 2024", "Healthcare Reform Bill")
2. Headline from this source
3. Brief excerpt (2-3 sentences)
4. Article URL
5. Thumbnail image URL if available

Return as JSON:
{
  "articles": [{
    "topic": "Main topic name that groups this story",
    "headline": "Headline from ${source.name}",
    "excerpt": "Brief excerpt",
    "url": "article URL",
    "thumbnail_url": "image URL or null"
  }]
}

Focus on major stories that other Canadian news outlets are also likely covering.`,
          add_context_from_internet: true,
          response_json_schema: {
            type: "object",
            properties: {
              articles: {
                type: "array",
                items: {
                  type: "object",
                  properties: {
                    topic: { type: "string" },
                    headline: { type: "string" },
                    excerpt: { type: "string" },
                    url: { type: "string" },
                    thumbnail_url: { type: "string" }
                  }
                }
              }
            }
          }
        });

        if (result.articles && Array.isArray(result.articles)) {
          for (const article of result.articles) {
            const existingArticle = await base44.entities.NewsArticle.filter({
              url: article.url
            });
            
            if (existingArticle.length > 0) continue;

            const topicKey = article.topic.toLowerCase().trim();
            
            if (!topicsMap[topicKey]) {
              topicsMap[topicKey] = {
                topic: article.topic,
                articles: [],
                thumbnail_url: article.thumbnail_url || null
              };
            }
            
            if (!topicsMap[topicKey].thumbnail_url && article.thumbnail_url) {
              topicsMap[topicKey].thumbnail_url = article.thumbnail_url;
            }
            
            topicsMap[topicKey].articles.push({
              ...article,
              source: source.name,
              source_bias: source.bias,
              published_date: new Date().toISOString()
            });

            await base44.entities.NewsArticle.create({
              topic: article.topic,
              title: article.headline,
              url: article.url,
              source: source.name,
              source_bias: source.bias,
              published_date: new Date().toISOString(),
              thumbnail_url: article.thumbnail_url,
              summary: article.excerpt
            });
          }
        }
      }

      for (const [topicKey, topicData] of Object.entries(topicsMap)) {
        if (topicData.articles.length >= 3) {
          const existingTopic = await base44.entities.NewsTopic.filter({
            topic: topicData.topic
          });
          
          if (existingTopic.length > 0) continue;

          const leftCount = topicData.articles.filter(a => a.source_bias === 'Left').length;
          const centreCount = topicData.articles.filter(a => a.source_bias === 'Centre').length;
          const rightCount = topicData.articles.filter(a => a.source_bias === 'Right').length;

          const hasLeftAndRight = leftCount > 0 && rightCount > 0;

          const allHeadlines = topicData.articles.map(a => `${a.source} (${a.source_bias}): ${a.headline}`).join('\n');
          
          const analysis = await base44.integrations.Core.InvokeLLM({
            prompt: `Analyze this Canadian news topic covered by multiple sources:

Topic: ${topicData.topic}

Headlines from different sources:
${allHeadlines}

Provide:
1. A neutral, comprehensive summary of the story (3-4 sentences)
2. 3-5 key points Canadians should know
3. ${hasLeftAndRight ? 'Points emphasized by left-leaning sources' : 'Skip left_emphasis'}
4. ${hasLeftAndRight ? 'Points emphasized by right-leaning sources' : 'Skip right_emphasis'}  
5. ${hasLeftAndRight ? 'Common ground - what all sources agree on' : 'Skip common_ground'}
6. Relevant tags (e.g., healthcare, economy, climate)

Be factual and neutral.`,
            response_json_schema: {
              type: "object",
              properties: {
                summary: { type: "string" },
                key_points: { type: "array", items: { type: "string" } },
                left_emphasis: { type: "array", items: { type: "string" } },
                right_emphasis: { type: "array", items: { type: "string" } },
                common_ground: { type: "array", items: { type: "string" } },
                tags: { type: "array", items: { type: "string" } }
              }
            }
          });

          await base44.entities.NewsTopic.create({
            topic: topicData.topic,
            headline: topicData.articles[0].headline,
            ai_summary: analysis.summary,
            thumbnail_url: topicData.thumbnail_url,
            published_date: new Date().toISOString(),
            source_count_left: leftCount,
            source_count_centre: centreCount,
            source_count_right: rightCount,
            left_emphasis: hasLeftAndRight ? (analysis.left_emphasis || []) : [],
            right_emphasis: hasLeftAndRight ? (analysis.right_emphasis || []) : [],
            common_ground: hasLeftAndRight ? (analysis.common_ground || []) : [],
            key_points: analysis.key_points || [],
            tags: analysis.tags || [],
            is_featured: false
          });
        }
      }

      if (Object.keys(topicsMap).length > 0) {
        const topicsList = await base44.entities.NewsTopic.list('-created_date');
        if (topicsList.length > 0) {
          await base44.entities.NewsTopic.update(topicsList[0].id, { is_featured: true });
        }
      }
      
      setIsFetching(false);
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['news-topics'] });
      queryClient.invalidateQueries({ queryKey: ['news-articles'] });
      toast.success('News fetched and analyzed from all sources');
    },
    onError: (error) => {
      setIsFetching(false);
      toast.error('Error fetching news: ' + error.message);
    }
  });

  const filteredTopics = topics.filter(topic =>
    topic.headline?.toLowerCase().includes(searchTerm.toLowerCase()) ||
    topic.topic?.toLowerCase().includes(searchTerm.toLowerCase()) ||
    topic.tags?.some(tag => tag.toLowerCase().includes(searchTerm.toLowerCase()))
  );

  const featuredTopic = filteredTopics.find(t => t.is_featured);
  const sideTopics = filteredTopics.filter(t => !t.is_featured).slice(0, 4);
  const remainingTopics = filteredTopics.filter(t => !t.is_featured).slice(4);

  const totalSources = (featuredTopic?.source_count_left || 0) + (featuredTopic?.source_count_centre || 0) + (featuredTopic?.source_count_right || 0);
  const leftPercent = totalSources > 0 ? Math.round(((featuredTopic?.source_count_left || 0) / totalSources) * 100) : 0;
  const centrePercent = totalSources > 0 ? Math.round(((featuredTopic?.source_count_centre || 0) / totalSources) * 100) : 0;
  const rightPercent = totalSources > 0 ? Math.round(((featuredTopic?.source_count_right || 0) / totalSources) * 100) : 0;

  return (
    <div className="min-h-screen bg-gray-50">
      <div className="bg-white border-b">
        <div className="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
          <div className="relative flex-1 max-w-md">
            <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-gray-400" />
            <Input
              placeholder="Search topics..."
              value={searchTerm}
              onChange={(e) => setSearchTerm(e.target.value)}
              className="pl-9 border-gray-300 text-sm"
            />
          </div>
          <Button
            onClick={() => fetchNewsMutation.mutate()}
            disabled={isFetching}
            size="sm"
            variant="outline"
            className="border-gray-300"
          >
            {isFetching ? (
              <>
                <Loader2 className="w-3 h-3 mr-2 animate-spin" />
                Updating...
              </>
            ) : (
              <>
                <RefreshCw className="w-3 h-3 mr-2" />
                Refresh
              </>
            )}
          </Button>
        </div>
      </div>

      {isLoading ? (
        <div className="max-w-7xl mx-auto px-6 py-12 text-center">
          <Loader2 className="w-8 h-8 animate-spin mx-auto mb-4" />
          <p className="text-gray-600">Loading news...</p>
        </div>
      ) : filteredTopics.length === 0 ? (
        <div className="max-w-7xl mx-auto px-6 py-12 text-center">
          <div className="border-2 border-dashed border-gray-300 rounded-lg p-12">
            <p className="text-gray-600 mb-4">
              {searchTerm ? 'No topics match your search' : 'No news topics yet'}
            </p>
            {!searchTerm && (
              <Button onClick={() => fetchNewsMutation.mutate()} className="bg-black">
                <RefreshCw className="w-4 h-4 mr-2" />
                Fetch Latest News
              </Button>
            )}
          </div>
        </div>
      ) : (
        <div className="max-w-7xl mx-auto px-6 py-8">
          <div className="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
            <div className="lg:col-span-2">
              <div className="text-xs font-bold text-gray-500 uppercase tracking-wider mb-4">
                Daily Briefing
              </div>
              {featuredTopic && (
                <div 
                  className="bg-white rounded-lg overflow-hidden shadow-sm border border-gray-200 cursor-pointer hover:shadow-md transition-shadow"
                  onClick={() => navigate(createPageUrl("Article") + "?id=" + featuredTopic.id)}
                >
                  {featuredTopic.thumbnail_url && (
                    <div className="h-80 bg-gray-100 overflow-hidden">
                      <img 
                        src={featuredTopic.thumbnail_url}
                        alt={featuredTopic.headline}
                        className="w-full h-full object-cover"
                      />
                    </div>
                  )}
                  <div className="p-6">
                    <div className="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2">
                      {featuredTopic.tags?.[0] || 'Politics'}
                    </div>
                    <h2 className="text-3xl font-bold text-black mb-4 leading-tight">
                      {featuredTopic.headline}
                    </h2>
                    <p className="text-gray-700 mb-4 leading-relaxed">
                      {featuredTopic.ai_summary}
                    </p>
                    
                    <div className="border-t pt-4">
                      <div className="flex items-center justify-between text-xs text-gray-600 mb-2">
                        <span className="font-semibold">Source Bias Distribution</span>
                        <span>{totalSources} sources • {featuredTopic.key_points?.length || 0} views</span>
                      </div>
                      <div className="flex items-center gap-2 mb-2">
                        <span className="text-xs text-gray-500">Left {leftPercent}%</span>
                        <div className="flex-1 h-2 bg-gray-100 rounded-full overflow-hidden flex">
                          {leftPercent > 0 && (
                            <div className="h-full bg-blue-500" style={{ width: `${leftPercent}%` }} />
                          )}
                          {centrePercent > 0 && (
                            <div className="h-full bg-gray-400" style={{ width: `${centrePercent}%` }} />
                          )}
                          {rightPercent > 0 && (
                            <div className="h-full bg-red-500" style={{ width: `${rightPercent}%` }} />
                          )}
                        </div>
                        <span className="text-xs text-gray-500">Right {rightPercent}%</span>
                      </div>
                      <div className="flex items-center justify-between text-xs text-gray-500">
                        <span>Centre {centrePercent}%</span>
                      </div>
                    </div>
                  </div>
                </div>
              )}
            </div>

            <div>
              <div className="text-xs font-bold text-gray-500 uppercase tracking-wider mb-4">
                More Headlines
              </div>
              <div className="space-y-4">
                {sideTopics.map(topic => {
                  const total = (topic.source_count_left || 0) + (topic.source_count_centre || 0) + (topic.source_count_right || 0);
                  return (
                    <div
                      key={topic.id}
                      className="bg-white rounded-lg p-4 shadow-sm border border-gray-200 cursor-pointer hover:shadow-md transition-shadow"
                      onClick={() => navigate(createPageUrl("Article") + "?id=" + topic.id)}
                    >
                      <div className="flex gap-3 mb-3">
                        {topic.thumbnail_url && (
                          <img 
                            src={topic.thumbnail_url}
                            alt={topic.headline}
                            className="w-20 h-20 object-cover rounded flex-shrink-0"
                          />
                        )}
                        <div className="flex-1 min-w-0">
                          <div className="text-xs font-bold text-gray-500 uppercase tracking-wider mb-1">
                            {topic.tags?.[0] || 'Politics'}
                          </div>
                          <h3 className="font-bold text-sm text-black leading-tight line-clamp-3">
                            {topic.headline}
                          </h3>
                        </div>
                      </div>
                      <div className="flex items-center justify-between text-xs text-gray-500">
                        <span>{topic.published_date ? format(new Date(topic.published_date), 'MMM d') : ''}</span>
                        <span>{total} sources • {topic.key_points?.length || 0}</span>
                      </div>
                    </div>
                  );
                })}
              </div>
            </div>
          </div>

          {remainingTopics.length > 0 && (
            <div>
              <div className="text-xs font-bold text-gray-500 uppercase tracking-wider mb-4">
                Top News Stories
              </div>
              <div className="text-sm text-gray-600 mb-6">
                Latest developments across multiple perspectives
              </div>
              <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {remainingTopics.map(topic => (
                  <div
                    key={topic.id}
                    className="bg-white rounded-lg overflow-hidden shadow-sm border border-gray-200 cursor-pointer hover:shadow-md transition-shadow"
                    onClick={() => navigate(createPageUrl("Article") + "?id=" + topic.id)}
                  >
                    {topic.thumbnail_url ? (
                      <div className="h-48 bg-gray-100 overflow-hidden">
                        <img 
                          src={topic.thumbnail_url}
                          alt={topic.headline}
                          className="w-full h-full object-cover"
                        />
                      </div>
                    ) : (
                      <div className="h-48 bg-gray-100 flex items-center justify-center">
                        <span className="text-gray-400 text-sm">Image</span>
                      </div>
                    )}
                    <div className="p-4">
                      <div className="flex items-center justify-between mb-2">
                        <div className="text-xs font-bold text-gray-500 uppercase tracking-wider">
                          {topic.tags?.[0] || 'Politics'}
                        </div>
                        <div className="text-xs text-gray-500">
                          {topic.published_date ? format(new Date(topic.published_date), 'MMM d') : ''}
                        </div>
                      </div>
                      <h3 className="font-bold text-lg text-black mb-2 leading-tight line-clamp-2">
                        {topic.headline}
                      </h3>
                      <p className="text-sm text-gray-600 line-clamp-3">
                        {topic.ai_summary}
                      </p>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>
      )}
    </div>
  );
}