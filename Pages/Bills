import React, { useState } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { RefreshCw, Search, Loader2 } from "lucide-react";
import { toast } from "sonner";
import BillCard from "../components/bills/BillCard";
import BillModal from "../components/bills/BillModal";

export default function Bills() {
  const queryClient = useQueryClient();
  const [searchTerm, setSearchTerm] = useState("");
  const [selectedBill, setSelectedBill] = useState(null);
  const [isFetching, setIsFetching] = useState(false);

  const { data: bills = [], isLoading } = useQuery({
    queryKey: ['bills'],
    queryFn: () => base44.entities.Bill.list('-created_date'),
    initialData: [],
  });

  const fetchBillsMutation = useMutation({
    mutationFn: async () => {
      setIsFetching(true);
      
      try {
        const result = await base44.integrations.Core.InvokeLLM({
          prompt: `Access the OpenParliament API at https://api.openparliament.ca/ and fetch information about current Canadian federal bills from the 44th Parliament.

For each bill, extract:
1. Bill number (e.g., C-10, S-5)
2. Full title
3. Current status
4. Date introduced
5. Brief description of what the bill does

Return as JSON with this structure:
{
  "bills": [{
    "bill_number": "string",
    "title": "string",
    "status": "string",
    "introduced_date": "ISO date string",
    "description": "string"
  }]
}

Focus on the most recent and active bills (at least 10 bills).`,
          add_context_from_internet: true,
          response_json_schema: {
            type: "object",
            properties: {
              bills: {
                type: "array",
                items: {
                  type: "object",
                  properties: {
                    bill_number: { type: "string" },
                    title: { type: "string" },
                    status: { type: "string" },
                    introduced_date: { type: "string" },
                    description: { type: "string" }
                  }
                }
              }
            }
          }
        });

        if (result.bills && Array.isArray(result.bills)) {
          for (const bill of result.bills) {
            const existingBill = await base44.entities.Bill.filter({
              bill_number: bill.bill_number
            });

            if (existingBill.length > 0) continue;

            const analysis = await base44.integrations.Core.InvokeLLM({
              prompt: `Analyze this Canadian federal bill in detail:

Bill Number: ${bill.bill_number}
Title: ${bill.title}
Description: ${bill.description}

Provide:
1. A plain-language summary (3-4 sentences) that any Canadian can understand
2. Why this bill matters to Canadians (2-3 sentences)
3. Historical or political context (2-3 sentences)
4. Likely party positions (Liberal, Conservative, NDP, Bloc Québécois, Green)

Be factual, neutral, and focus on helping Canadians understand the bill's impact.`,
              response_json_schema: {
                type: "object",
                properties: {
                  summary: { type: "string" },
                  why_it_matters: { type: "string" },
                  historical_context: { type: "string" },
                  party_positions: {
                    type: "object",
                    properties: {
                      Liberal: { type: "string" },
                      Conservative: { type: "string" },
                      NDP: { type: "string" },
                      "Bloc Québécois": { type: "string" },
                      Green: { type: "string" }
                    }
                  }
                }
              }
            });

            await base44.entities.Bill.create({
              bill_number: bill.bill_number,
              title: bill.title,
              summary: analysis.summary || bill.description,
              why_it_matters: analysis.why_it_matters,
              status: bill.status,
              introduced_date: bill.introduced_date,
              historical_context: analysis.historical_context,
              party_positions: analysis.party_positions || {},
              openparliament_url: `https://openparliament.ca/bills/${bill.bill_number.toLowerCase()}/`,
              vote_summary: {}
            });
          }
        }
      } catch (error) {
        console.error('Error fetching bills:', error);
        throw error;
      } finally {
        setIsFetching(false);
      }
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['bills'] });
      toast.success('Bills fetched and analyzed');
    },
    onError: (error) => {
      toast.error('Error fetching bills: ' + error.message);
    }
  });

  const filteredBills = bills.filter(bill =>
    bill.title?.toLowerCase().includes(searchTerm.toLowerCase()) ||
    bill.bill_number?.toLowerCase().includes(searchTerm.toLowerCase()) ||
    bill.summary?.toLowerCase().includes(searchTerm.toLowerCase())
  );

  return (
    <div className="min-h-screen bg-white">
      <div className="max-w-6xl mx-auto px-6 py-8">
        <div className="flex items-center justify-between mb-8">
          <div>
            <h1 className="text-4xl font-bold tracking-tight text-black mb-2">
              Federal Bills
            </h1>
            <p className="text-gray-600">
              Plain-language summaries of Canadian federal legislation
            </p>
          </div>
          <Button
            onClick={() => fetchBillsMutation.mutate()}
            disabled={isFetching}
            className="bg-black hover:bg-gray-800"
          >
            {isFetching ? (
              <>
                <Loader2 className="w-4 h-4 mr-2 animate-spin" />
                Fetching...
              </>
            ) : (
              <>
                <RefreshCw className="w-4 h-4 mr-2" />
                Refresh Bills
              </>
            )}
          </Button>
        </div>

        <div className="mb-6">
          <div className="relative">
            <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" />
            <Input
              placeholder="Search bills by number, title, or content..."
              value={searchTerm}
              onChange={(e) => setSearchTerm(e.target.value)}
              className="pl-10 border-black"
            />
          </div>
        </div>

        <div className="grid gap-6">
          {isLoading ? (
            <div className="text-center py-12">
              <Loader2 className="w-8 h-8 animate-spin mx-auto mb-4" />
              <p className="text-gray-600">Loading bills...</p>
            </div>
          ) : filteredBills.length === 0 ? (
            <div className="text-center py-12 border-2 border-dashed border-gray-300 rounded-lg">
              <p className="text-gray-600 mb-4">
                {searchTerm ? 'No bills match your search' : 'No bills yet'}
              </p>
              {!searchTerm && (
                <Button onClick={() => fetchBillsMutation.mutate()} className="bg-black">
                  <RefreshCw className="w-4 h-4 mr-2" />
                  Fetch Bills
                </Button>
              )}
            </div>
          ) : (
            filteredBills.map((bill) => (
              <BillCard
                key={bill.id}
                bill={bill}
                onClick={() => setSelectedBill(bill)}
              />
            ))
          )}
        </div>
      </div>

      {selectedBill && (
        <BillModal
          bill={selectedBill}
          onClose={() => setSelectedBill(null)}
        />
      )}
    </div>
  );
}